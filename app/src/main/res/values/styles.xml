<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextInputStyle">
        <item name="android:textColor">#555555</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:background">@drawable/rectangle_empty_gray</item>
    </style>

    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button"></style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@color/txtTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Blue_Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_stroke_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Gray" parent="@style/Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Gray.Normal" parent="@style/Text">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Gray.Edit.Small" parent="@style/Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.Blue.Edit.Sel" parent="@style/Text">
        <item name="android:textColor">@color/txt_blue_sel</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:background">@drawable/rectangle_empty_blue</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.Blue.Edit.Normal" parent="@style/Text">
        <item name="android:textColor">@color/black55</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_empty_gray_cc</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Gray.Light" parent="@style/Text">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.White" parent="@style/Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.White.Small" parent="@style/Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Black.Light" parent="@style/Text">
        <item name="android:textColor">@color/black55</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Blue" parent="@style/Text">
        <item name="android:textColor">@color/txtBlue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Blue.Light" parent="@style/Text">
        <item name="android:textColor">@color/txtBlueLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Blue.Light2" parent="@style/Text">
        <item name="android:textColor">@color/txtBlueLight2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.Blue.Edit.Title" parent="@style/Text">
        <item name="android:textColor">@color/txtBlueLight2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Text.Black.Light.Large" parent="@style/Text">
        <item name="android:textColor">@color/black55</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text.Black.Gray.Small" parent="@style/Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="AppTheme.Splash">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="bottom_dialog" parent="android:style/Theme.Dialog">
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/Animation_Bottom_Dialog</item>
    </style>
    <style name="Animation_Bottom_Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eaeaea</item>
    </style>
    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">请选择</item>
        <item name="android:textColor">@color/selector_text_color_tab</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="Text.Gray.Rectangle.Small" parent="@style/Text">
        <item name="android:textColor">@color/txtGray99</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/rectangle_empty_gray_eb</item>
    </style>
</resources>
